<div class="center hero-unit">
  <div class="row">

    <%= render "search_form" %>

	<% if user_signed_in? %>
	  <%= link_to "View My List", list_items_path(:id => current_user.id) %>	
	<% else %>
	  Have an account? <%= link_to('Sign In!', new_user_session_path)  %>   
	  <br>
	  Need an account? <%= link_to "Sign Up!", new_user_registration_path %>
	<% end %>
  </div>
</div>

<% if @term.nil? %>
	<br>
<% else %>
	<% if @search.count > 0 %>
	  <%= render "search_results" %>
	<% else %>
	  <%= render "no_search_results" %>
	<% end %>
<% end %>

