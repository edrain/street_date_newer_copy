<div class="center hero-unit">
  <div class="row">
	<div class="search_results">
	  <%= link_to "Back to search", root_path %>
	  <br><br>
      <% if @list_items != nil %>
	    <table>
		  <% @list_items.each do |list_item| %>
		  <tr>
		    <td>
			  <img src="<%= list_item.artist_image %>" 
						alt="<%= list_item.artist_name %>">
			</td>
			<td>
			  <br>
			  <h2>
				<a data-toggle="modal" href="#artist_detail_modal_<%= list_item.artist_id %>">
						<%= list_item.artist_name %>
				</a>
				<%= render :partial => "static_pages/artist_detail_modal", :locals => { :artist_id => (@artist_id = list_item.artist_id), :artist_in_list => (@artist_in_list = "1"), :artist_image => (@artist_image = list_item.artist_image), :artist_link_url => (@artist_link_url = list_item.artist_url), :artist_name => (@artist_name = list_item.artist_name), :artist_albums => (@artist_albums = list_item.artist_albums) }%>
			  </h2>
			</td>
			<td>
			  <% if @list_editable == true %>	
				<%= render :partial => "list_items/delete_list_item", :locals => { :id => (@id = list_item.id) } %>
			  <% end %>	
			</td>
	      <% end %>
			<tr>
			  <td colspan=3>
			    <%= will_paginate @list_items %>
			  </td>
	    </table>
	  <% else %>
	    <div class="alert alert-notice">
		  This user has chosen not to share this list.
	    </div>
	  <% end %>
	
	  <br>
	  <%= link_to "Back to search", root_path %>
	  <br>
	</div>
  </div>
</div>