<%= devise_error_messages! %>

<div class="center hero-unit">
  <div class="row">
	<div class="search_form">
	  <table>
	    <tr>
		  <td>
	        <h2>Sign up</h2>

			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			
  			<div class="form_label"><%= f.label :email %>
  			<%= f.email_field :email %></div>

  			<div class="form_label"><%= f.label :user_name %>
  			<%= f.text_field :user_name %></div>

  			<div class="form_label"><%= f.label :password %>
  			<%= f.password_field :password %></div>

  			<div class="form_label"><%= f.label :password_confirmation %>
  			<%= f.password_field :password_confirmation %></div>

			<div class="form_label">Share your list? &nbsp;
  			<%= f.check_box :shareable, {checked: true} %></div>

			<br>
			
  			<div><%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
			</div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>

		  </td>
		</tr>
	  </table>
	</div>
  </div>
</div>